@model Punch.Models.PunchedClock
@{
    ViewBag.Title = "Punch Clock";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center" id="ClockButton">
            @if (Model.PunchIn == DateTime.MinValue)
            {
                using (Html.BeginForm("PunchClockIn", "Home"))
                {
                    <button class="btn btn-lg btn-primary" type="submit" id="ClockButton">@ViewData["Message"]</button>
                }
            }
            else
            {
                using (Html.BeginForm("PunchClockOut", "Home"))
                {
                    @Html.HiddenFor(m => m.Id);
                    <button class="btn btn-lg btn-primary" type="submit" id="ClockButton">@ViewData["Message"]</button>

                }
            }
        </div>
    </div>
</div>
